generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id                 Int    @id @default(autoincrement())
  fullname           String
  subdivision        String
  position           String
  status             String
  peoplePartner      Int
  outOfOfficeBalance Int
}

model LeaveRequest {
  id            Int      @id @default(autoincrement())
  employee      Int
  absenceReason String
  startDate     DateTime
  endDate       DateTime
  comment       String
  status        String
}

model ApprovalRequest {
  id           Int    @id @default(autoincrement())
  approver     Int
  leaveRequest Int
  status       String
  comment      String
}

model Project {
  id             Int      @id @default(autoincrement())
  projectType    String
  startDate      DateTime
  endDate        DateTime
  projectManager Int
  comment        String
  status         String
}
